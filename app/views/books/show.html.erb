<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user-info', books: @books, book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @books.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br />
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <% if @books.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
            <td><%= link_to "Destroy", book_path(@books), method: :delete   %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>