<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user-info', books: @books, book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"), user_path(book.user_id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td>
              <div id="favorites_buttons_<%= book.id %>">
                <%= render partial: 'favorites/favorite', locals: { book: book} %>
              </div>
            </td>
            <td><p>コメント件数：<%= book.book_comments.count %></p></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>