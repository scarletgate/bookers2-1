<%= render 'books/user-info', books: @books, book: @book, user: @user %>
<main>
<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%#= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</main>