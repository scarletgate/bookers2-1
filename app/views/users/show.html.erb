<p id="notice"><%= notice %></p>
<%= render 'books/user-info', books: @books, book: @book, user: @user %>
<main>
<h1>Books</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <h1>サイドバー</h1>
    </div>
    
    <div class="col-lg-1"></div>
    
    <div class="col-lg-8">
      <table class="table">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</main>