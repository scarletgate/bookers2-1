<p id="notice"><%= notice %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user-info', books: @books, book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br />
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <td>
              <% if @books.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@books), method: :delete do %>
                    ♥<%= @books.favorites.count %>
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to book_favorites_path(@books), method: :post do %>
                    ♡<%= @books.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td><p>コメント件数：<%= @books.book_comments.count %></p></td>
            <% if @books.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@books.id), { :class => "btn btn-sm btn-success"} %></td>
            <td><%= link_to "Destroy", book_path(@books), { :class => "btn btn-sm btn-danger", method: :delete} %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <table>
        <tbody>
          <% @books.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br />
              <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
            <td>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), { :class => "btn btn-sm btn-danger", method: :delete} %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= form_with(model:[@books, @book_comment], local: true) do |f| %>
        <div class="field">
          <%= f.text_area :comment, class: 'form-control', placeholder: "" %>
        </div>
        <div class="actions">
          <%= f.submit "送信" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>